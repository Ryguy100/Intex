    <title>Document</title>
    <style>
      /* Custom styles for a white Bootstrap navigation bar with a subtle shadow */
      body {
        background-color: #f8f9fa;
      }

      .sleek-header {
        background: linear-gradient(
          to right,
          #4caf50,
          #2196f3
        ); /* Gradient background */
        color: #ffffff; /* Text color */
        text-align: center;
        padding: 100px 0; /* Adjust padding as needed */
      }

      .login-card {
        background-color: #ffffff; /* White background */
        border-radius: 10px; /* Rounded edges */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
        padding: 20px; /* Adjust padding as needed */
        margin: 20px auto; /* Center the card */
        max-width: 400px; /* Set a maximum width for the card */
      }

      .container {
        max-width: 40%;
      }

      .sample-text {
        text-align: center;
        padding: 50px 0; /* Adjust padding as needed */
      }

      .sleek-button {
        margin-top: 20px; /* Adjust margin as needed */
      }

      .form-group {
        margin-bottom: 20px;
      }

      .navbar {
        z-index: 1000;
        background-color: #ffffff;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow */
      }

      .navbar-dark .navbar-nav .nav-link {
        color: #343a40; /* Dark text color */
      }

      .navbar-dark .navbar-toggler-icon {
        background-color: #343a40; /* Dark color for the toggler icon */
      }

      .navbar-dark .navbar-toggler {
        border-color: #343a40; /* Dark color for the toggler border */
      }

      /* Align items to the left */
      .navbar-nav {
        margin-right: auto;
      }

      /* Styles for the account dropdown menu */
      .account-dropdown {
        position: relative;
      }

      .account-dropdown .dropdown-toggle::after {
        display: none; /* Hide the default dropdown indicator */
      }

      .account-dropdown .dropdown-menu {
        right: 0;
        left: auto;
      }

      /* Custom styles for links inside the dropdown menu */
      .account-dropdown .dropdown-item {
        color: #343a40;
        text-decoration: none;
        padding: 0.5rem 1rem;
      }

      .account-dropdown .dropdown-item:hover {
        background-color: #f8f9fa;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <a class="navbar-brand" href="#">White Navbar</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
        </ul>
      </div>
      <% if(user) { %>

      <div class="account-dropdown">
        <button
          class="btn btn-link dropdown-toggle"
          type="button"
          id="accountDropdown"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          My Account
        </button>
        <div class="dropdown-menu" aria-labelledby="accountDropdown">
          <a class="dropdown-item" href="/editaccount"
            ><form method="get" action="edit/<%= user.id %>/">
              <button
                style="border: none; background-color: white"
                type="submit"
              >
                Edit Account
              </button>
            </form></a
          >
          <% if (user.isadmin) { %>
          <a class="dropdown-item" href="/users">Edit Users</a>
          <% } %>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/logout">Logout</a>
        </div>
      </div>

      <% } else { %>

      <div class="account-dropdown">
        <button
          class="btn btn-link dropdown-toggle"
          type="button"
          id="accountDropdown"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          <a href="/login">Login</a>
        </button>
        <div class="dropdown-menu" aria-labelledby="accountDropdown">
          <a class="dropdown-item" href="/login">Login</a>
          <a class="dropdown-item" href="/register">Register</a>
        </div>
      </div>

      <% } %>
    </nav>

    <div class="sleek-header">
      <h1>Sleek Header</h1>
      <p>Add your additional text or content here.</p>
      <a href="#" class="btn btn-primary sleek-button">Take the survey</a>
    </div>

    <div class="sample-text">
      <h2>Sample Text Below Header</h2>
      <p>
        This is some sample text. You can add more content, images, or other
        elements here to create your page layout.
      </p>
    </div>

    <div class="login-card">
      <h2>Login</h2>
      <form>
        <div class="form-group">
          <label for="username">Username:</label>
          <input
            type="text"
            class="form-control"
            id="username"
            placeholder="Enter your username"
          />
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input
            type="password"
            class="form-control"
            id="password"
            placeholder="Enter your password"
          />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </div>

