    <div class="container">
      <form>
        <!-- Question 1 -->
        <div class="form-group">
          <label for="age">Age:</label>
          <input
            type="number"
            class="form-control"
            id="age"
            name="age"
            min="0"
            max="130"
            required
          />
        </div>

        <!-- Question 2 -->
        <div class="form-group">
          <label for="gender">Gender:</label>
          <select class="form-control" id="gender" name="gender" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="N-B">Non-Binary</option>
            <option value="Prefer not to say">Prefer Not to Say</option>
          </select>
        </div>

        <!-- Question 3 -->
        <div class="form-group">
          <label for="relationshipStatus">Relationship Status:</label>
          <select
            class="form-control"
            id="relationshipStatus"
            name="relationshipStatus"
            required
          >
            <option value="single">Single</option>
            <option value="relationship">In a relationship</option>
            <option value="married">Married</option>
            <option value="divorced">Divorced</option>
          </select>
        </div>

        <!-- Question 4 -->
        <div class="form-group">
          <label for="occupationStatus">Occupation Status:</label>
          <select
            class="form-control"
            id="occupationStatus"
            name="occupationStatus"
          >
            <option value="University Student">University Student</option>
            <option value="Private">Private</option>
            <option value="School, University">School, University</option>
            <option value="Retired">Retired</option>
          </select>
        </div>

        <!-- Question 5 -->
        <div class="form-group">
          <label for="restlessWithoutSocialMedia"
            >Do you feel restless if you havenâ€™t used social media in a
            while?</label
          >
          <select
            class="form-control"
            id="restlessWithoutSocialMedia"
            name="restlessWithoutSocialMedia"
          >
            <option value="1">1 Never</option>
            <option value="2">2 Rarely</option>
            <option value="3">3 Occasionally</option>
            <option value="4">4 Frequently</option>
            <option value="5">5 Always</option>
          </select>
        </div>

        <!-- Question 6 -->
        <div class="form-group">
          <label for="question1">How would you rate this question?</label>
          <input
            type="range"
            class="form-control-range"
            id="question1"
            name="question1"
            min="1"
            max="5"
            step="1"
            value="3"
          />
        </div>

        <!-- Add more questions as needed -->

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <div class="popup-container" id="mentalHealthPopup">
      <div class="alert alert-secondary" role="alert" class="popup-content">
        <p>
          If you or someone you know is struggling, please reach out to the
          Mental Health Hotline.
        </p>
        <b><p>Hotline: 1-833-456-4566</p></b>
        <button class="popup-icon" onclick="restorePopup()">Close</button>
      </div>
    </div>
  
    <script>
      // Show the popup after a delay 
      setTimeout(openPopup, 3000);
    
      function openPopup() {
        var popup = document.getElementById('mentalHealthPopup');
        if (popup) {
          popup.style.display = 'block';
        }
      }
    
      function closePopup() {
        var popup = document.getElementById('mentalHealthPopup');
        if (popup) {
          popup.style.display = 'none';
        }
      }
    </script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
